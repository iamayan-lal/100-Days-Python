#Calculator Project
def addition(a, b):
    return a + b


def subtract(a, b):
    return a - b


def multiply(a, b):
    return a * b


def division(a, b):
    return a / b


operations = {
    "+": addition,
    "-": subtract,
    "*": multiply,
    "/": division,
}
def calculator():
    a = float(input("Enter first number: "))
    should_accumulate = True
    while should_accumulate:

        for symbol in operations:
            print(symbol)
        operation = input("Enter operation that you want to perform: ")
        b = float(input("Enter second number: "))
        result = operations[operation](a,b)
        print(f"{a} {operation} {b} = {result}")
        response = input("Do you want to continue with the previous operation? Type Yes or No:\n").lower()
        if response == "yes":
            a = result
        else :
            should_accumulate = False
            print(f"\n"* 20)
            calculator()
calculator()
